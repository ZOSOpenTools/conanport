# export ZOPEN_STABLE_TAG="v${CONAN_VERSION}"
export ZOPEN_STABLE_URL="git@github.com:conan-io/conan.git"
export ZOPEN_STABLE_DEPS="python"
export ZOPEN_DEV_URL="git@github.com:conan-io/conan.git"
export ZOPEN_DEV_DEPS="python"
export ZOPEN_BUILD_LINE="STABLE"
export ZOPEN_RUNTIME_DEPS="python"
export ZOPEN_CATEGORIES="development devops"

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  # Echo the following information to gauge build health
  echo "actualFailures:0"
  echo "totalTests:1"
  echo "expectedFailures:0"
  echo "expectedTotalTests:1"
}

zopen_get_version()
{
  # Modify to echo the version of your tool/library
  # Rather than hardcoding the version, obtain the version by running the tool/library
  echo "1.0.0"
}
